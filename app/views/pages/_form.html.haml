= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :slug
    = f.text_field :slug
    
  .field
    = f.label :position
    = f.text_field :position
    
  .field
    = f.label :visible
    = f.check_box :visible
    
  .field
    = f.label :menu
    = f.check_box :menu

  .field
    = f.label :active
    = f.check_box :active

  .actions
    = f.submit 'Save'
