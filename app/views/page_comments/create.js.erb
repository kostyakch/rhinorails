<% if @page_comment.errors.any? %>
$("#errors").html('<%= escape_javascript(render("shared/error_messages", object: @page_comment, :formats => [:html])) %>');
<% else %>
	<% if @page_comment.approved %>
		$("form").each (function() { this.reset(); });	
		$("#errors").html('<%= escape_javascript(render("success_message", :formats => [:html])) %>');
		setTimeout(function() { 
			location.reload();
    	}, 3000);
	<% else %>		
		$("#errors").html('<%= escape_javascript(render("success_message", :formats => [:html])) %>');
		$("form").each (function() { this.reset(); });	
	<% end %>
<% end %>