<% if top_menu_items(item).present? %>
	<li class="dropdown">
		<%= link_to raw("#{item.name} <b class=\"caret\"></b>"), (item.slug == 'index' ? '/' : "/#{item.slug}"), class: 'dropdown-toggle', :'data-toggle' => "dropdown" %>
		
		<ul class="dropdown-menu">
		<% top_menu_items(item).each do |children| %>
			<%= render 'layouts/top_menu_item', item: children, level: level + 1 %>			
		<% end %> 
		</ul>
	</li>
<% else %>
	<li>
		<%= link_to item.name, item.slug == 'index' ? '/' : page_path(item.slug) %>
	</li>
<% end %>