<% provide(:title, "Админка") %>

<% content_for :sidebar_l2 do %>
<div id="sidebar-left2" class="span2">
	<div class="nav-collapse sidebar-nav">
		<ul class="nav nav-tabs nav-stacked">
			<% page_tree.each do |p| %>
				<%= render 'rows', p: p, level: 0 %>
			<% end %> 
		</ul>				
	</div>
</div>
<% end %>


<div class="row-fluid sortable ui-sortable">	
	<div class="box span12">
		<div class="box-header">
			<h2><i class="halflings-icon hand-top"></i><span class="break"></span>Quick Buttons</h2>
		</div>
		<div class="box-content">
			
			<a class="quick-button span2">
				<i class="fa-icon-tasks"></i>
				<p>Новости/Статьи</p>
				<span class="notification"><%= Page.where("ptype='article'").count-1 %></span>
			</a>
			<a href="" class="quick-button span2">
				<i class="fa-icon-book"></i>
				<p>Блоги</p>
				<span class="notification red"><%= Page.where("ptype='blog'").count-1 %></span>
			</a>
			<a href="<%= admin_page_comments_path %>" class="quick-button span2">
				<i class="fa-icon-comments-alt"></i>
				<p>Комментарии</p>
				<span class="notification green"><%= PageComment.count %></span>
			</a>
			<a href="<%= admin_galleries_path %>" class="quick-button span2">
				<i class="fa-icon-picture"></i>
				<p>Изображения</p>
				<span class="notification green"><%= GalleryImage.count %></span>
			</a>
			<a href="<%= admin_users_path %>" class="quick-button span2">
				<i class="fa-icon-group"></i>
				<p>Пользователи</p>
				<span class="notification"><%= User.count %></span>
			</a>
			<a href="<%= admin_settings_path %>" class="quick-button span2">
				<i class="fa-icon-cogs"></i>
				<p>Настройки</p>
				<span class="notification yellow"><%= Setting.count %></span>
			</a>
			<div class="clearfix"></div>
		</div>	
	</div>
</div>