<% provide(:title, "Список блогов") %>

<div class="row-fluid">  
  <div class="box span12">

    <div class="box-content">
      <a href="<%= new_admin_blog_path %>" class="quick-button offset2 span3">
        <i class="fa-icon-tasks"></i>
        <p>Новый блог</p>
      </a>

      <a href="<%= admin_blog_comments_path %>" class="quick-button offset2 span3">
        <i class="fa-icon-picture"></i>
        <p>Комментарии</p>
        <span class="notification blue"><%= BlogComment.count %></span>
      </a>

      <div class="clearfix"></div>
    </div>  
  </div>
</div>

<div class="box-header" data-original-title="">
  <h2><i class="halflings-icon align-justify"></i><span class="break"></span>Блоги</h2>
</div>
<div class="box-content">
  <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
    <table class="table table-striped tree">
      <thead>
        <tr>
          <th width="90%">Наименование</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>       
        <% @blogs.each do |b| %>
        <tr>
          <td>
            <b><%= link_to b.title, edit_admin_blog_path(b) %></b>
          </td>
          <td class="center">
            <%= link_to raw('<i class="halflings-icon edit"></i>'), edit_admin_blog_path(b), class: 'btn btn-info' %>
            <%= link_to raw('<i class="halflings-icon trash"></i>'), admin_blog_path(b), class: 'btn btn-info', :method => :delete, :data => { :confirm => t('_DELETE_CONFIRM') } %>
          </td>
        </tr>
        <% end %>       
      </tbody>
    </table>          
    <div class="row-fluid">
      <div class="span12 center">
        <div class="dataTables_paginate paging_bootstrap pagination"><%= will_paginate @blogs %></div>
      </div>
    </div>
  </div>
</div>
